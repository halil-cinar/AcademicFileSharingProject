@{
    ViewData["Title"] = "Index";

    Layout = "~/Views/AdminLayout/_AdminLayout.cshtml";
}
@model UserDto
<div class="row">
    <form method="post" class="col-lg-8 container">
        <div class="card">
            <div class="card-header">
                <strong>Profil Düzenleme</strong><small> </small>
            </div>
            <div class="card-body card-block">
                <div class="form-group">
                    <label for="name" class="form-control-label">İsim</label><input type="text"
                                                                                    id="name"
                                                                                    placeholder="İsminizi giriniz"
                                                                                    class="form-control"
                                                                                    asp-for="Name" />
                </div>
                <div class="form-group">
                    <label for="surname" class="form-control-label">Soyisim</label><input type="text"
                                                                                          id="surname"
                                                                                          placeholder="Soyismini giriniz"
                                                                                          class="form-control"
                                                                                          asp-for="Surname" />
                </div>
                <div class="form-group">
                    <label for="phone" class="form-control-label">Telefon</label><input type="text"
                                                                                        id="phone"
                                                                                        placeholder="Telefon numaranızı giriniz"
                                                                                        class="form-control"
                                                                                        asp-for="PhoneNumber" />
                </div>



                <div class="row form-group">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label for="email" class="form-control-label">Eposta</label><input type="text"
                                                                                               id="email"
                                                                                               placeholder="Eposta adresinzi giriniz"
                                                                                               class="form-control"
                                                                                               asp-for="Email" />
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label for="email2" class="form-control-label">Diğer Eposta </label><input type="text"
                                                                                                       id="email2"
                                                                                                       placeholder="Eposta adresinzi giriniz(isteğe bağlı)"
                                                                                                       class="form-control"
                                                                                                       asp-for="Email2" />
                        </div>
                    </div>



                </div>
                <div class="form-group">
                    <label for="title" class="form-control-label">Görev</label><input type="text"
                                                                                      id="title"
                                                                                      placeholder="Görevinizi giriniz"
                                                                                      class="form-control"
                                                                                      asp-for="Title" />
                </div>
                <div class="form-group">
                    <label for="desc" class="form-control-label">Biyografiniz</label><textarea 
                                                                                               id="desc"
                                                                                               rows="9"
                                                                                               asp-for="Description"
                                                                                               
                                                                                               style="resize:none"
                                                                                               placeholder="Biyografiniz(isteğe bağlı)"
                                                                                               class="form-control"></textarea>
                </div>
                <div class="form-group">
                    <label for="file" class="form-control-label">Biyografiniz</label><input type="file"
                                                                                            id="file"
                                                                                            asp-for="ProfileImage"
                                                                                            class="form-control-file">
                </div>



            </div>
            <button type="submit" class="btn btn-success ">
                <i class="fa fa-dot-circle-o"></i> Gönder
            </button>
        </div>
        
    </form>

</div>



