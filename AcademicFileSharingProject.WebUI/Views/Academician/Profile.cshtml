            <ul class="list-group">
                @for (int i = 0; i < ViewBag.Posts?.Values?.Count ?? 0; i++)
                {
                    var item = ViewBag.Posts.Values[i] as PostListDto;
                    if (item.PostImageId != null)
                    {
                        <li class="list-group-item">
                            <div class="card  ">
                                <div class="row g-0  justify-content-center justify-content-md-between">
                                    <div class="col-md-4  " style="max-width: 300px;">
