@{
    ViewData["Title"] = "Add";
    Layout = "~/Views/AdminLayout/_AdminLayout.cshtml";
}


@model PostDto
<div class="row">
    <form method="post" class="col-lg-8 container" enctype="multipart/form-data">
        <div class="card">
            <div class="card-header">
                <strong>Profil Düzenleme</strong><small> </small>
            </div>
            <div class="card-body card-block">


                <div class="form-group">
                    <label for="desc" class="form-control-label">İçeriği Giriniz</label><textarea id="desc"
                                                                                                  rows="9"
                                                                                                  asp-for="Content"
                                                                                                  style="resize:none"
                                                                                                  placeholder="Biyografiniz(isteğe bağlı)"
                                                                                                  class="form-control"></textarea>
                </div>
                <div class="form-group">
                    <label for="title" class="form-control-label">Yayınlansın mı?</label><input type="checkbox"
                                                                                                id="title"
                                                                                                placeholder="Görevinizi giriniz"
                                                                                                class="form-control"
                                                                                                asp-for="IsAir" />
                </div>
                <div class="form-group">
                    <label for="file" class="form-control-label">Post üzerinde Görüntülenecek resmi giriniz</label><input type="file"
                                                                                                                          id="file"
                                                                                                                          asp-for="PostImage"
                                                                                                                          class="form-control-file">
                </div>
                <div class="form-group">
                    <label for="file" class="form-control-label">Paylaşmak istediğiniz tüm dosyaları giriniz</label><input type="file"
                                                                                                                          multiple
                                                                                                                          id="file"
                                                                                                                          asp-for="Files"
                                                                                                                          class="form-control-file">
                </div>




            </div>
            <button type="submit" class="btn btn-success ">
                <i class="fa fa-dot-circle-o"></i> Gönder
            </button>
        </div>

    </form>

</div>




