
@{
    ViewData["Title"] = "Add";
    Layout = "~/Views/AdminLayout/_AdminLayout.cshtml";
}

@model SoftwareDto

<form method="post" enctype="multipart/form-data">
    
    <div class="form-floating mb-3">
        <input type="text" asp-for="Name" class="form-control" id="TitleInput" placeholder="">
        <label for="TitleInput">Başlık</label>
    </div>
    <div class="form-floating">
        <textarea class="form-control" asp-for="Description" placeholder="" id="ContentTextarea" style="height: 300px; margin-bottom:10px; resize:none"></textarea>
        <label for="ContentTextarea">İçeriğinizi yazın </label>
    </div>
    <div class="form-floating mb-3">
        <input type="checkbox" asp-for="IsAir" class="form-control" id="IsAirInput" placeholder="">
        <label for="IsAirInput">Yayınlansın mı?</label>
    </div>
    <div class="form-floating mb-3">
        <input type="file" asp-for="File" class="form-control" id="FileInput" placeholder="">
        <label for="FileInput">Dosyayı giriniz</label>
    </div>

    <div class="form-floating mb-3">
        <input type="file" asp-for="Document" class="form-control" id="DocumentInput" placeholder="">
        <label for="DocumentInput">Döküman giriniz</label>
    </div>

    <div class="form-floating mb-3">
        <input type="file" asp-for="Logo" class="form-control" id="LogoInput" placeholder="">
        <label for="LogoInput">Logo giriniz</label>
    </div>



    <button class="btn btn-warning" type="submit">Ekle</button>
</form>


