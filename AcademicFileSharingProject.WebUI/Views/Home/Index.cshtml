@{
    ViewData["Title"] = "Home Page";
    ViewData["pageName"] = "/";
}

@section CSS {
    <link rel="stylesheet" href="~/css/index.css" />
}

<div class="main-carousel">
    <div id="carouselExampleAutoplaying" class="carousel slide" data-bs-ride="carousel">
        <div class="carousel-inner">

            @for (int i = 0; i < ((ViewBag.Blogs as List<BlogListDto>)?.Count ?? 0); i++)
            {
                var item = (ViewBag.Blogs as List<BlogListDto>)?[i];
                <div class="carousel-item @(i==0?"active":"")">
                    <img src="/Media/@(item.MediaId??(int)EMediaKey.None)" class="d-block w-100" alt="...">
                    <div class="carousel-caption d-none d-md-block">
                        <h5>@item.Title</h5>
                        <p>@(item.User.FullName)</p>
                    </div>
                </div>
            }

        </div>
        <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleAutoplaying" data-bs-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Previous</span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleAutoplaying" data-bs-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Next</span>
        </button>
    </div>
</div>



<div class="featured row">

    <div class="card col-md-5">
        <h5 class="card-header">Öne Çıkan Öğretim Üyeleri</h5>
        <div class="card-body">
            <div id="carouselFeatureAcademician" class="carousel slide" data-bs-ride="carousel">
                <div class="carousel-inner">
                    @for (int i = 0; i < ((ViewBag.Users as List<UserListDto>)?.Count ?? 0); i++)
                    {
                        var item = (ViewBag.Users as List<UserListDto>)?[i];
                        <div class="carousel-item @(i==0?"active":"")">
                            <img src="/Media/@(item.ProfileImageId??(int)EMediaKey.Person)" class="d-block w-100" alt="...">
                            <div class="carousel-caption d-none d-md-block">
                                <h5>@item.FullName</h5>
                                <p>@item.Title</p>
                            </div>
                        </div>
                    }
                </div>
                <button class="carousel-control-prev" type="button" data-bs-target="#carouselFeatureAcademician" data-bs-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="visually-hidden">Previous</span>
                </button>
                <button class="carousel-control-next" type="button" data-bs-target="#carouselFeatureAcademician" data-bs-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="visually-hidden">Next</span>
                </button>
            </div>
        </div>
    </div>
    <div class="col-md-1"></div>
    <div class="card col-md-5">
        <h5 class="card-header">En Son Eklenen Gönderiler </h5>
        <div class="card-body">
            <div id="carouselFeaturedDocuments" class="carousel slide" data-bs-ride="carousel">
                <div class="carousel-inner">
                    @for (int i = 0; i < ((ViewBag.Posts as List<PostListDto>)?.Count ?? 0); i++)
                    {
                        var item = (ViewBag.Posts as List<PostListDto>)?[i];
                        <div class="carousel-item @(i==0?"active":"")">
                            <img src="/Media/@(item.PostImageId??(int)EMediaKey.None)" class="d-block w-100" alt="...">
                            <div class="carousel-caption d-none d-md-block">
                                <p>@(item.Content.Substring(i,Math.Min(item.Content.Length,100)))</p>
                                <h5>@item.User.FullName</h5>
                            </div>
                        </div>
                    }
                    
                </div>
            </div>
            <button class="carousel-control-prev" type="button" data-bs-target="#carouselFeaturedDocuments" data-bs-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Previous</span>
            </button>
            <button class="carousel-control-next" type="button" data-bs-target="#carouselFeaturedDocuments" data-bs-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Next</span>
            </button>
        </div>
    </div>
</div>

